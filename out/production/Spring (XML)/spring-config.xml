<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="usd-converter" class="root.ConvertManager">
        <constructor-arg index="0" value="USD"/>
        <constructor-arg index="1" value="65.43"/>
    </bean>

    <bean id="eur-converter" class="root.ConvertManager">
        <constructor-arg index="0" value="EUR"/>
        <constructor-arg index="1" value="74.16"/>
    </bean>

    <bean id="gbr-converter" class="root.ConvertManager">
        <constructor-arg index="0" value="GBR"/>
        <constructor-arg index="1" value="85.44"/>
    </bean>

    <bean id="cny-converter" class="root.ConvertManager">
        <constructor-arg index="0" value="CNY"/>
        <constructor-arg index="1" value="9.74"/>
    </bean>

</beans>